    <script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function() {

        var s1 = 0;
        var s2 = 0;
        var s3 = 0;

        $(document).on("pageinit", "#calificacionAlumno", function() {
            $("#slider-1").on('slidestop', function(event) {
                s1 = $("#slider-1").val() * 0.65; // 65% de la nota, max 6.5 puntos
                var total = s1 + s2 + s3;
                $("#text-10").val(total);
            });

            $("#slider-2").on('slidestop', function(event) {
                s2 = $("#slider-2").val() * 0.10; // 10% de la nota, max 1 punto
                var total = s1 + s2 + s3;
                $("#text-10").val(total);
            });

            $("#slider-3").on('slidestop', function(event) {
                s3 = $("#slider-3").val() * 0.25; // 25% de la nota, max 2.5 puntos
                var total = s1 + s2 + s3;
                $("#text-10").val(total);
            });
        });

        var total = s1 + s2 + s3;
        $("#text-10").val(total);


    });
    </script>
